<!DOCTYPE html>
<html>
<head>
  <title>Music</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <% if logged_in? %>
    logged in as
    <%= current_user.email %>
    <%= button_to "Log Out", { :controller => :sessions,
                :action => "destroy" }, :method => "post" %>
  <% else %>
  <%= link_to "Log In", login_path %>
  <% end %>
</head>
<body>
<%= flash[:notice] if flash[:notice] %>
<%= yield %>

</body>
</html>
